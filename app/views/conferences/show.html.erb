<div id="centercon">
  <div style="float:left;width:100%;">
  <h3 style="text-align:center;"><%=@conference.title%></h3>
  <div style="text-align:center;"><%=link_to "专业会务数据员小李（跑嘛会ID：010）","#","data-toggle"=>"modal","data-target"=>"#contact"%>
  <div class="modal hide fade" id="contact" >
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>联系信息</h3>
        </div>
        <div class="modal-body">
          <div>XXX@hotmail.com</div>
        </div>
        <div class="modal-footer">
          <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
        </div>
      </div>
  </div>
  <div class="row" style="margin:0 auto;border-bottom:1px solid #CECECE;width:700px">
    <div class="span4" style="width:400px">
      <div>开始时间:<%=@conference.start_at.strftime("%-m-%-d %H:%M")%>&nbsp&nbsp结束时间:<%=@conference.end_at.strftime("%-m-%-d %H:%M")%></div>
      <div style="text-align:left">地址:<%=@conference.location%></div>
    </div>
    <div id="allmap" class="span4"></div>
  </div>
  <div id="article"><p><%=simple_format @conference.body%></p></div>
  </div>
</div>
<script type="text/javascript">
var map = new BMap.Map("allmap");    
map.centerAndZoom(new BMap.Point(116.404, 39.915), 16);    
var local = new BMap.LocalSearch(map, {    
 renderOptions: {map: map, panel: "results"}    
});    
local.search("<%=@conference.location%>");
</script>
